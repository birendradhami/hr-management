@model IEnumerable<Employee>@{
    ViewData["Title"] = "Index";
}@{
    int i = 1;
}<div class="container p-3">    <div class="row pt-3">        <div class="col-6">            <h2 class="text-primary">Employee List</h2>
        </div>		<div class="col-6 text-end ">            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary"><i class="bi bi-person-plus-fill"></i> Add Employee</a>
        </div>
    </div>
  <table class="table">    <thead>        <tr>            <th scope="col">S.N.</th>            <th scope="col">Name</th>            <th scope="col">Address</th>            <th scope="col">Phone</th>            <th scope="col">Email</th>            <th scope="col">Gender</th>            <th scope="col">JoinDate</th>            <th scope="col">Designation</th>            <th scope="col">Department</th>            <th></th>        </tr>    </thead>    <tbody>        @foreach (var employee in Model)
        {            <tr>                <th scope="row">@(i++)</th>                <td>@employee.Name</td>                <td>@employee.Address</td>                <td>@employee.Phone</td>                <td>@employee.Email</td>                <td>@employee.Gender</td>                <td>@employee.JoinDate.ToString("MMM dd, yyyy")</td>                <td>@employee.Designation?.Title</td>                <td>@employee.Department?.Name</td>                <td>@*                    <a href="/employee/edit/@employee.Id"><i class="bi bi-pencil text-warning"></i></a>*@                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a> |                        <a  asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary"><i class="bi bi-info-square"></i>Details</a> |                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" class="h-auto btn btn-danger"><i class="bi bi-trash text-primary"></i>Delete</a>                </td>            </tr>        }            </tbody>	</table></div>